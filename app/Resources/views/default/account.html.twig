{% extends 'base.html.twig' %}
{% block title %}Twój trening{% endblock %}
{% block resources %}
	<link rel="stylesheet" href="{{ asset('css/account.css') }}" />
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-2">
			<img class="profilePicture" src="{{ asset(''~profileImage.profileImage) }}" />
			{{ form_start(imageForm) }}
			{{ form_row(imageForm.profileImage) }}
			{{ form_end(imageForm) }}
		</div>
		<div class="col-md-4">
			<div class="boldText">Moj profil:</div><a href="" id="editData">edytuj</a></br>
				{{ form_start(dataForm) }}
				<div>
					{{ form_row(dataForm.age, { 'attr': { 'readonly': 'true' }}) }}
				</div>
				<div>
					{{ form_row(dataForm.weight, { 'attr': { 'readonly': 'true', 'value': userData.weight }}) }} <span class="kgUnit">kg</span>
				</div>
				<div>
					{{ form_row(dataForm.height, { 'attr': { 'readonly': 'true', 'value': userData.height }}) }} <span class="cmUnit">cm</span>
				</div>
				<div>
					{{ form_row(dataForm.calories, { 'attr': { 'readonly': 'true', 'value': userData.calories }}) }} <span class="kcalUnit">kcal</span>
				</div>
				<button type="button" class="btn btn-success" name="button">Zapisz zmiany</button>
				{{ form_end(dataForm) }}
		</div>
		<div class="col-md-4">
			<div class="boldText">Moje konto:</div>
			<div class="">
				{{ form_start(emailForm) }}
			</span><a href="" class="editEmail">edytuj</a></br>
					{{ form_row(emailForm.email, { 'attr': { 'readonly': 'true', 'value': email}}) }}
					<button type="button" class="btn btn-success emailBtn" name="button">Zapisz zmiany</button>
				{{ form_end(emailForm) }}
			</div>
			<div class="">
				hasło: </span><a class="showForm" href="">zmień hasło</a></br>
			</div>
			<div class="hide hiddenForm">
				{{ form_start(changePasswordForm) }}
				<div class="">
					{{ form_row(changePasswordForm.oldPassword) }}
					{{ form_row(changePasswordForm.newPassword) }}
				</div>
					<button type="submit" class="btn btn-success" name="button">Zapisz zmiany</button>
				{{ form_end(changePasswordForm) }}
			</div>
		</div>

	</div>
	{% block scripts %}
		<script type="text/javascript" src="{{ asset('javascript/account.js') }}"></script>
	{% endblock %}
{% endblock %}
