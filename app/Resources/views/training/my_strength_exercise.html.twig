{% extends 'base.html.twig' %}
{% block title %}Twój trening siłowy{% endblock %}
{% block resources %}
{% endblock %}
{% block body %}
	<a href="{{ path('my_strength_training') }}">Poprzednia strona</a>
	<p class="text-center">{{ training }}</p>
	{{ form_start(form) }}
	<ul class="exersises" data-prototype="{{ form_widget(form.myExercises.vars.prototype)|e('html_attr') }}">
		{% for myExercise in form.myExercises %}
			<li>
				{{ form_row(myExercise.name) }}
				<a href="#" class="removeLink">usuń</a>
			</li>
		{% endfor %}
	</ul>
	<button type="submit" name="button">Zapisz</button>
	{{ form_end(form) }}

	{% block scripts %}
        <script src="{{ asset('javascript/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('javascript/add_my_training.js') }}"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	{% endblock %}
{% endblock %}
