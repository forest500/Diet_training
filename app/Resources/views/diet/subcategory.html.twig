{% extends 'base.html.twig' %}
{% block title %}Twoja dieta i trening{% endblock %}
{% block resources %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <a href="{{ previousPage }}">Poprzednia strona</a>
        <div class="row productContainer">
            <div class="col-md-6">
                <ul class="productList list-group">
                    {% for product in products %}
                        <li id="{{ loop.index0 }}" class="productItem list-group-item">
                		    <a href="#">{{ product.name }}</a>
                            <div class="productMacros">
                                Białko: {{ product.totalProtein }}g
                                Węglowodany: {{ product.carbohydrates }}g
                                Tłuszcz: {{ product.fat }}g
                            </div>
                            <div class="productCalories">
                                {{ product.calories }}kcal w 100g
                            </div>
                        </li>
                	{% endfor %}
                </ul>
            </div>
            <div class="col-md-3">
                <div class="nutrients">
                    <div class="productForm hide">
                        <div class="productInfo"></div>
                        {{ form_start(form) }}
                            {{ form_row(form.productId) }}
                            {{ form_row(form.quantity) }}
                            <table class="table table-striped">
                                <tr>
                                    <td>Kalorie</td>
                                    <td class="calories"></td>
                                </tr>
                                <tr>
                                    <td>Białko</td>
                                    <td class="protein"></td>
                                </tr>
                                <tr>
                                    <td>Węglowodany</td>
                                    <td class="carbohydrates"></td>
                                </tr>
                                <tr>
                                    <td>Tłuszcze</td>
                                    <td class="fat"></td>
                                </tr>
                            </table>
                            <div class="hide hiddenMeal">{{ meal }}</div>
                            {{ form_row(form.meal) }}
                            {{ form_row(form.add) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block scripts %}
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
          <script src="{{ asset('javascript/product.js') }}"></script>
    {% endblock %}
{% endblock %}
